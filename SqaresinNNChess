import java.util.*;
import java.lang.*;
import java.io.*;
class GFG
 {
	public static void main (String[] args)
	 {
	 //code
	 Scanner scan = new Scanner(System.in);
	 int cases = scan.nextInt();
	 for (int i = 0; i < cases; i++){
	     long temp = scan.nextInt();
	     temp = ((temp*temp + temp)*(2*temp + 1))/6;
	     System.out.println(temp);
	 }
	 
	 }
}
